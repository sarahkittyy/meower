{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "build/",
		"strict": true,
		"baseUrl": "src",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
		"paths": {
			"@util/*": ["util/*"],
			"@commands/*": ["commands/*"],
			"@db/*": ["util/db/*"],
			"@msg/*": ["messages/*"]
		},
		"target": "es6",
		"moduleResolution": "node",
		"module": "commonjs"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}
